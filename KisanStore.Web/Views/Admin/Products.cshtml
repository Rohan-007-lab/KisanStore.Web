@model List<KisanStore.Web.Controllers.ProductViewModel>
@{
    ViewData["Title"] = "Manage Products";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="fas fa-box text-primary"></i> Manage Products
            </h2>
            <p class="text-muted mb-0">Total Products: @(Model?.Count ?? 0)</p>
        </div>
        <a href="/Admin/CreateProduct" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Status</th>
                                <th>Featured</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <strong>#@product.ProductId</strong>
                                    </td>
                                    <td class="align-middle">
                                        <img src="@(product.ImageUrl ?? "https://via.placeholder.com/60")" 
                                             alt="@product.ProductName" 
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    </td>
                                    <td class="align-middle">
                                        <strong>@product.ProductName</strong>
                                        <br>
                                        <small class="text-muted">@product.Manufacturer</small>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge bg-info">
                                            @product.Category?.CategoryName
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        @if (product.DiscountPrice.HasValue)
                                        {
                                            <div>
                                                <strong class="text-success">₹@product.DiscountPrice</strong>
                                                <br>
                                                <small class="text-muted"><del>₹@product.Price</del></small>
                                            </div>
                                        }
                                        else
                                        {
                                            <strong>₹@product.Price</strong>
                                        }
                                        <br>
                                        <small class="text-muted">per @product.Unit</small>
                                    </td>
                                    <td class="align-middle">
                                        @if (product.StockQuantity > 10)
                                        {
                                            <span class="badge bg-success">@product.StockQuantity</span>
                                        }
                                        else if (product.StockQuantity > 0)
                                        {
                                            <span class="badge bg-warning">@product.StockQuantity</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Out of Stock</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        @if (product.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        @if (product.IsFeatured)
                                        {
                                            <i class="fas fa-star text-warning" title="Featured"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-muted" title="Not Featured"></i>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <div class="btn-group">
                                            <a href="/Admin/EditProduct/@product.ProductId" 
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" 
                                                  action="/Admin/DeleteProduct/@product.ProductId" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                <button type="submit" 
                                                        class="btn btn-sm btn-danger" 
                                                        title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <h4>No Products Found</h4>
                <p class="text-muted">Start by adding your first product</p>
                <a href="/Admin/CreateProduct" class="btn btn-primary mt-3">
                    <i class="fas fa-plus"></i> Add Product
                </a>
            </div>
        </div>
    }
</div>