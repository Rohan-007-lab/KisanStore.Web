<!-- Views/Admin/Products.cshtml -->
@model List<KisanStore.Web.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box"></i> Manage Products</h2>
        <a href="/Admin/CreateProduct" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>
                                <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" 
                                     alt="@product.ProductName" style="width: 50px; height: 50px; object-fit: cover;">
                            </td>
                            <td>@product.ProductName</td>
                            <td>@product.Category?.CategoryName</td>
                            <td>
                                @if (product.DiscountPrice.HasValue)
                                {
                                    <span>₹@product.DiscountPrice</span>
                                    <small class="text-muted"><del>₹@product.Price</del></small>
                                }
                                else
                                {
                                    <span>₹@product.Price</span>
                                }
                            </td>
                            <td>@product.StockQuantity</td>
                            <td>
                               
                            </td>
                            <td>
                                <a href="/Admin/EditProduct/@product.ProductId" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="/Admin/DeleteProduct/@product.ProductId" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" 
                                            onclick="return confirm('Are you sure?')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>