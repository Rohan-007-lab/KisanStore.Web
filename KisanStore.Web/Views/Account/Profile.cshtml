@{
    ViewData["Title"] = "My Profile";
    var userName = Context.Session.GetString("UserName") ?? "User";
    var userEmail = Context.Session.GetString("UserEmail") ?? "user@example.com";
}

<div class="profile-hero">
    <div class="container">
        <h1 class="display-5 fw-bold text-white mb-2">
            <i class="fas fa-user-circle"></i> My Profile
        </h1>
        <p class="lead text-white-50">Manage your account settings</p>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="profile-sidebar">
                <div class="profile-avatar">
                    <div class="avatar-circle">
                        @userName.Substring(0, 1).ToUpper()
                    </div>
                    <button class="btn-change-photo">
                        <i class="fas fa-camera"></i>
                    </button>
                </div>
                <h5 class="text-center mt-3">@userName</h5>
                <p class="text-muted text-center">@userEmail</p>

                <nav class="profile-nav">
                    <a href="#personal-info" class="profile-nav-link active">
                        <i class="fas fa-user"></i> Personal Information
                    </a>
                    <a href="#address" class="profile-nav-link">
                        <i class="fas fa-map-marker-alt"></i> Address Book
                    </a>
                    <a href="#orders" class="profile-nav-link">
                        <i class="fas fa-box"></i> My Orders
                    </a>
                    <a href="#wishlist" class="profile-nav-link">
                        <i class="fas fa-heart"></i> Wishlist
                    </a>
                    <a href="#security" class="profile-nav-link">
                        <i class="fas fa-lock"></i> Security
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Personal Information -->
            <div class="profile-card" id="personal-info">
                <div class="card-header">
                    <h5><i class="fas fa-user"></i> Personal Information</h5>
                    <button class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </button>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Full Name</label>
                                <input type="text" class="form-control" value="@userName">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" value="@userEmail">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" value="+91 98765 43210">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Address Book -->
            <div class="profile-card" id="address">
                <div class="card-header">
                    <h5><i class="fas fa-map-marker-alt"></i> Address Book</h5>
                    <button class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Add Address
                    </button>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="address-card">
                                <div class="address-badge">Home</div>
                                <h6>Home Address</h6>
                                <p>
                                    123 Agriculture Plaza<br>
                                    Pune, Maharashtra 411001<br>
                                    Phone: +91 98765 43210
                                </p>
                                <div class="address-actions">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="address-card">
                                <div class="address-badge work">Work</div>
                                <h6>Farm Address</h6>
                                <p>
                                    Plot No. 45, Farm Road<br>
                                    Satara, Maharashtra 415002<br>
                                    Phone: +91 98765 43211
                                </p>
                                <div class="address-actions">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security -->
            <div class="profile-card" id="security">
                <div class="card-header">
                    <h5><i class="fas fa-lock"></i> Security Settings</h5>
                </div>
                <div class="card-body">
                    <h6 class="mb-3">Change Password</h6>
                    <form>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Current Password</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">New Password</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Confirm Password</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-key"></i> Update Password
                                </button>
                            </div>
                        </div>
                    </form>

                    <hr class="my-4">

                    <h6 class="mb-3">Two-Factor Authentication</h6>
                    <div class="security-option">
                        <div>
                            <h6>Enable 2FA</h6>
                            <p class="text-muted mb-0">Add an extra layer of security to your account</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="2fa">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 60px 0;
    }

    .profile-sidebar {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        position: sticky;
        top: 100px;
    }

    .profile-avatar {
        position: relative;
        width: fit-content;
        margin: 0 auto;
    }

    .avatar-circle {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        font-weight: 800;
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .btn-change-photo {
        position: absolute;
        bottom: 5px;
        right: 5px;
        width: 40px;
        height: 40px;
        background: white;
        border: 3px solid white;
        border-radius: 50%;
        color: #667eea;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .profile-nav {
        margin-top: 30px;
    }

    .profile-nav-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        color: #7f8c8d;
        text-decoration: none;
        border-radius: 10px;
        margin-bottom: 5px;
        transition: all 0.3s ease;
    }

        .profile-nav-link:hover,
        .profile-nav-link.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

    .profile-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
    }

        .profile-card .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 25px;
            border-bottom: 2px solid #f0f0f0;
        }

            .profile-card .card-header h5 {
                font-weight: 700;
                color: #2c3e50;
                margin: 0;
            }

        .profile-card .card-body {
            padding: 25px;
        }

    .address-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        position: relative;
        transition: all 0.3s ease;
    }

        .address-card:hover {
            background: #e9ecef;
            transform: translateY(-3px);
        }

    .address-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #667eea;
        color: white;
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 700;
    }

        .address-badge.work {
            background: #27ae60;
        }

    .address-card h6 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .address-card p {
        color: #7f8c8d;
        margin-bottom: 15px;
        line-height: 1.8;
    }

    .address-actions {
        display: flex;
        gap: 10px;
    }

    .security-option {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 12px;
    }

        .security-option h6 {
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 5px;
        }

    .form-check-input:checked {
        background-color: #667eea;
        border-color: #667eea;
    }
</style>