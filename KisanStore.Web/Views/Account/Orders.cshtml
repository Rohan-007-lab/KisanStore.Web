@model List<KisanStore.Web.Controllers.OrderViewModel>
@{
    ViewData["Title"] = "My Orders";
}

<div class="orders-hero">
    <div class="container">
        <h1 class="display-5 fw-bold text-white mb-2">
            <i class="fas fa-box"></i> My Orders
        </h1>
        <p class="lead text-white-50">Track and manage your orders</p>
    </div>
</div>

<div class="container my-5">
    @if (Model != null && Model.Any())
    {
        <div class="orders-stats mb-4">
            <div class="stat-card">
                <i class="fas fa-shopping-bag"></i>
                <div>
                    <h4>@Model.Count</h4>
                    <p>Total Orders</p>
                </div>
            </div>
            <div class="stat-card">
                <i class="fas fa-clock"></i>
                <div>
                    <h4>@Model.Count(o => o.OrderStatus == "Pending")</h4>
                    <p>Pending</p>
                </div>
            </div>
            <div class="stat-card">
                <i class="fas fa-check-circle"></i>
                <div>
                    <h4>@Model.Count(o => o.OrderStatus == "Delivered")</h4>
                    <p>Delivered</p>
                </div>
            </div>
        </div>

        @foreach (var order in Model)
        {
            <div class="order-card">
                <div class="order-header">
                    <div class="order-info">
                        <h5>Order #@order.OrderNumber</h5>
                        <p class="text-muted mb-0">
                            <i class="fas fa-calendar"></i> 
                            Placed on @order.OrderDate.ToString("dd MMM yyyy, hh:mm tt")
                        </p>
                    </div>
                    <div class="order-status">
                        @if (order.OrderStatus == "Delivered")
                        {
                            <span class="badge-status delivered">
                                <i class="fas fa-check-circle"></i> Delivered
                            </span>
                        }
                        else if (order.OrderStatus == "Shipped")
                        {
                            <span class="badge-status shipped">
                                <i class="fas fa-shipping-fast"></i> Shipped
                            </span>
                        }
                        else if (order.OrderStatus == "Processing")
                        {
                            <span class="badge-status processing">
                                <i class="fas fa-cog"></i> Processing
                            </span>
                        }
                        else if (order.OrderStatus == "Cancelled")
                        {
                            <span class="badge-status cancelled">
                                <i class="fas fa-times-circle"></i> Cancelled
                            </span>
                        }
                        else
                        {
                            <span class="badge-status pending">
                                <i class="fas fa-clock"></i> Pending
                            </span>
                        }
                    </div>
                </div>

                <div class="order-items">
                    @foreach (var item in order.OrderItems)
                    {
                        <div class="order-item">
                            <img src="@(item.Product?.ImageUrl ?? "https://via.placeholder.com/80")" 
                                 alt="@item.Product?.ProductName">
                            <div class="item-details">
                                <h6>@item.Product?.ProductName</h6>
                                <p class="text-muted mb-1">Quantity: @item.Quantity</p>
                                <p class="text-muted mb-0">₹@item.Price each</p>
                            </div>
                            <div class="item-total">
                                <h6>₹@item.TotalPrice</h6>
                            </div>
                        </div>
                    }
                </div>

                <div class="order-footer">
                    <div class="order-total">
                        <span>Total Amount:</span>
                        <h4>₹@order.TotalAmount</h4>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-outline-primary">
                            <i class="fas fa-eye"></i> View Details
                        </button>
                        @if (order.OrderStatus == "Delivered")
                        {
                            <button class="btn btn-outline-success">
                                <i class="fas fa-download"></i> Invoice
                            </button>
                        }
                        @if (order.OrderStatus == "Pending" || order.OrderStatus == "Processing")
                        {
                            <button class="btn btn-outline-danger">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                        }
                    </div>
                </div>

                <!-- Order Timeline -->
                @if (order.OrderStatus != "Cancelled")
                {
                    <div class="order-timeline">
                        <div class="timeline-item @(order.OrderStatus == "Pending" || order.OrderStatus == "Processing" || order.OrderStatus == "Shipped" || order.OrderStatus == "Delivered" ? "completed" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="timeline-content">
                                <h6>Order Placed</h6>
                                <p>@order.OrderDate.ToString("dd MMM, hh:mm tt")</p>
                            </div>
                        </div>
                        <div class="timeline-item @(order.OrderStatus == "Processing" || order.OrderStatus == "Shipped" || order.OrderStatus == "Delivered" ? "completed" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-cog"></i>
                            </div>
                            <div class="timeline-content">
                                <h6>Processing</h6>
                                <p>Preparing your order</p>
                            </div>
                        </div>
                        <div class="timeline-item @(order.OrderStatus == "Shipped" || order.OrderStatus == "Delivered" ? "completed" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-shipping-fast"></i>
                            </div>
                            <div class="timeline-content">
                                <h6>Shipped</h6>
                                <p>On the way</p>
                            </div>
                        </div>
                        <div class="timeline-item @(order.OrderStatus == "Delivered" ? "completed" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-box-open"></i>
                            </div>
                            <div class="timeline-content">
                                <h6>Delivered</h6>
                                <p>@(order.DeliveredDate?.ToString("dd MMM, hh:mm tt") ?? "Pending")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="empty-orders">
            <i class="fas fa-shopping-bag"></i>
            <h3>No Orders Yet</h3>
            <p class="text-muted">Start shopping to see your orders here</p>
            <a href="/Products" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-shopping-cart"></i> Shop Now
            </a>
        </div>
    }
</div>

<style>
    .orders-hero {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        padding: 60px 0;
    }

    .orders-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        gap: 20px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .stat-card i {
        font-size: 2.5rem;
        color: #3498db;
    }

    .stat-card h4 {
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .stat-card p {
        color: #7f8c8d;
        margin: 0;
    }

    .order-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        overflow: hidden;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 25px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-bottom: 2px solid #dee2e6;
    }

    .order-info h5 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .badge-status {
        padding: 10px 20px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .badge-status.delivered {
        background: #d4edda;
        color: #155724;
    }

    .badge-status.shipped {
        background: #d1ecf1;
        color: #0c5460;
    }

    .badge-status.processing {
        background: #fff3cd;
        color: #856404;
    }

    .badge-status.pending {
        background: #f8d7da;
        color: #721c24;
    }

    .badge-status.cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .order-items {
        padding: 25px;
    }

    .order-item {
        display: flex;
        gap: 20px;
        padding: 15px;
        border-bottom: 1px solid #f0f0f0;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .order-item img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 10px;
    }

    .item-details {
        flex: 1;
    }

    .item-details h6 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .item-total h6 {
        font-weight: 800;
        color: #27ae60;
        font-size: 1.2rem;
    }

    .order-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 25px;
        background: #f8f9fa;
        border-top: 2px solid #dee2e6;
    }

    .order-total {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .order-total h4 {
        font-weight: 800;
        color: #2c3e50;
        margin: 0;
    }

    .order-actions {
        display: flex;
        gap: 10px;
    }

    .order-timeline {
        display: flex;
        padding: 30px;
        background: white;
        border-top: 1px solid #e9ecef;
    }

    .timeline-item {
        flex: 1;
        position: relative;
        text-align: center;
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        top: 25px;
        left: 50%;
        width: 100%;
        height: 2px;
        background: #e0e0e0;
        z-index: 0;
    }

    .timeline-item:last-child::before {
        display: none;
    }

    .timeline-item.completed::before {
        background: #27ae60;
    }

    .timeline-icon {
        width: 50px;
        height: 50px;
        background: #e0e0e0;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        position: relative;
        z-index: 1;
        color: #7f8c8d;
    }

    .timeline-item.completed .timeline-icon {
        background: #27ae60;
        color: white;
    }

    .timeline-content h6 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .timeline-content p {
        color: #7f8c8d;
        font-size: 0.85rem;
        margin: 0;
    }

    .empty-orders {
        text-align: center;
        padding: 80px 20px;
    }

    .empty-orders i {
        font-size: 5rem;
        color: #e0e0e0;
        margin-bottom: 20px;
    }

    .empty-orders h3 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    @@media (max-width: 768px) {
        .order-header,
        .order-footer {
            flex-direction: column;
            gap: 15px;
        }

        .order-timeline {
            flex-direction: column;
        }

        .timeline-item::before {
            left: 25px;
            top: 50px;
            width: 2px;
            height: 100%;
        }

        .timeline-icon {
            margin: 0;
        }

        .timeline-content {
            text-align: left;
            padding-left: 70px;
        }
    }
</style>