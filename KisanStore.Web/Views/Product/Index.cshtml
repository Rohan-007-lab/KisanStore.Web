@model List<KisanStore.Web.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container my-5">
    <h2 class="mb-4"><i class="fas fa-box"></i> All Products</h2>
    
    <div class="row mb-4">
        <div class="col-md-8">
            <form method="get" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Search products..." value="@Context.Request.Query["search"]">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
            </form>
        </div>
        <div class="col-md-4">
            <form method="get">
                <select name="categoryId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat.CategoryId" selected="@(Context.Request.Query["categoryId"] == cat.CategoryId.ToString())">
                                @cat.CategoryName
                            </option>
                        }
                    }
                </select>
            </form>
        </div>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div class="card product-card h-100">
                        <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" class="card-img-top" alt="@product.ProductName">
                        <div class="card-body">
                            <span class="badge bg-info text-dark mb-2">@product.Category?.CategoryName</span>
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text text-muted small">@product.Manufacturer</p>
                            <div class="mb-2">
                                @if (product.DiscountPrice.HasValue)
                                {
                                    <span class="price">₹@product.DiscountPrice</span>
                                    <span class="old-price ms-2">₹@product.Price</span>
                                    <span class="badge bg-danger ms-2">
                                        @Math.Round((decimal)(product.Price - product.DiscountPrice) / product.Price * 100)% OFF
                                    </span>
                                }
                                else
                                {
                                    <span class="price">₹@product.Price</span>
                                }
                            </div>
                            @if (product.StockQuantity > 0)
                            {
                                <span class="badge bg-success">In Stock (@product.StockQuantity)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/Products/Details/@product.ProductId" class="btn btn-primary btn-sm w-100">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-triangle"></i> No products found.
                </div>
            </div>
        }
    </div>
</div>