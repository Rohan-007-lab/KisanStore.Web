<!-- Views/Cart/Index.cshtml -->
@model List<KisanStore.Web.Models.Cart>
@{
    ViewData["Title"] = "Shopping Cart";
    decimal total = 0;
}

<div class="cart-hero">
    <div class="container">
        <h1 class="display-5 fw-bold text-white mb-2">
            <i class="fas fa-shopping-cart"></i> Shopping Cart
        </h1>
        <p class="text-white-50">Review your items before checkout</p>
    </div>
</div>

<div class="container my-5">
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="cart-items-container">
                    @foreach (var item in Model)
                    {
                        var price = item.Product?.DiscountPrice ?? item.Product?.Price ?? 0;
                        var itemTotal = price * item.Quantity;
                        total += itemTotal;

                        <div class="cart-item-card">
                            <div class="cart-item-image">
                                <img src="@(item.Product?.ImageUrl ?? "https://via.placeholder.com/150")" 
                                     alt="@item.Product?.ProductName">
                            </div>
                            <div class="cart-item-details">
                                <h5 class="cart-item-name">@item.Product?.ProductName</h5>
                                <p class="cart-item-meta">
                                    <span class="badge bg-info">@item.Product?.Category?.CategoryName</span>
                                    <span class="text-muted ms-2">
                                        <i class="fas fa-industry"></i> @item.Product?.Manufacturer
                                    </span>
                                </p>
                                <div class="cart-item-price">
                                    <span class="price">₹@price</span>
                                    <span class="unit">per @item.Product?.Unit</span>
                                </div>
                            </div>
                            <div class="cart-item-actions">
                                <div class="quantity-control">
                                    <button class="qty-btn" onclick="updateQuantity(@item.CartId, @item.Quantity - 1)">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <input type="text" value="@item.Quantity" readonly class="qty-input">
                                    <button class="qty-btn" onclick="updateQuantity(@item.CartId, @item.Quantity + 1)">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <div class="item-total">
                                    <strong>₹@itemTotal</strong>
                                </div>
                                <form method="post" action="/Cart/Remove/@item.CartId" class="remove-form">
                                    <button type="submit" class="btn-remove" title="Remove">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="order-summary">
                    <h4 class="summary-title">
                        <i class="fas fa-file-invoice"></i> Order Summary
                    </h4>
                    
                    <div class="summary-item">
                        <span>Subtotal (@Model.Count items)</span>
                        <strong>₹@total</strong>
                    </div>
                    
                    <div class="summary-item">
                        <span>Delivery Charges</span>
                        @if (total >= 500)
                        {
                            <strong class="text-success">FREE</strong>
                        }
                        else
                        {
                            <strong>₹50</strong>
                        }
                    </div>
                    
                    @if (total < 500)
                    {
                        <div class="delivery-notice">
                            <i class="fas fa-info-circle"></i>
                            Add ₹@(500 - total) more for FREE delivery
                        </div>
                    }
                    
                    <div class="summary-divider"></div>
                    
                    <div class="summary-total">
                        <span>Total Amount</span>
                        <strong>₹@(total >= 500 ? total : total + 50)</strong>
                    </div>
                    
                    <button class="btn-checkout">
                        <i class="fas fa-lock"></i> Proceed to Checkout
                    </button>
                    
                    <a href="/Products" class="btn-continue-shopping">
                        <i class="fas fa-arrow-left"></i> Continue Shopping
                    </a>
                    
                    <div class="secure-notice">
                        <i class="fas fa-shield-alt"></i>
                        <small>Safe and Secure Payments</small>
                    </div>
                </div>

                <!-- Promo Code -->
                <div class="promo-section">
                    <h6><i class="fas fa-tag"></i> Have a Promo Code?</h6>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter code">
                        <button class="btn btn-primary">Apply</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <div class="empty-cart-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <h3>Your cart is empty</h3>
            <p class="text-muted">Add products to your cart to see them here</p>
            <a href="/Products" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-shopping-bag"></i> Browse Products
            </a>
        </div>
    }
</div>

<style>
    .cart-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 60px 0;
    }

    .cart-items-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .cart-item-card {
        background: white;
        border-radius: 16px;
        padding: 20px;
        display: flex;
        gap: 20px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

    .cart-item-card:hover {
        box-shadow: 0 5px 25px rgba(0,0,0,0.12);
    }

    .cart-item-image {
        width: 120px;
        height: 120px;
        flex-shrink: 0;
        border-radius: 12px;
        overflow: hidden;
        background: linear-gradient(135deg, #f5f7fa 0%, #e8eef3 100%);
    }

    .cart-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .cart-item-details {
        flex: 1;
    }

    .cart-item-name {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .cart-item-meta {
        margin-bottom: 10px;
    }

    .cart-item-price .price {
        font-size: 1.5rem;
        font-weight: 800;
        color: #27ae60;
    }

    .cart-item-price .unit {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-left: 5px;
    }

    .cart-item-actions {
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: flex-end;
    }

    .quantity-control {
        display: flex;
        align-items: center;
        gap: 0;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
    }

    .qty-btn {
        width: 35px;
        height: 35px;
        border: none;
        background: white;
        color: #667eea;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .qty-btn:hover {
        background: #667eea;
        color: white;
    }

    .qty-input {
        width: 50px;
        height: 35px;
        border: none;
        text-align: center;
        font-weight: 700;
    }

    .item-total {
        font-size: 1.5rem;
        color: #2c3e50;
    }

    .btn-remove {
        background: #fee;
        color: #e74c3c;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-remove:hover {
        background: #e74c3c;
        color: white;
    }

    /* Order Summary */
    .order-summary {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        position: sticky;
        top: 20px;
    }

    .summary-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        color: #7f8c8d;
    }

    .delivery-notice {
        background: #fff3cd;
        color: #856404;
        padding: 10px;
        border-radius: 8px;
        font-size: 0.9rem;
        margin: 10px 0;
    }

    .summary-divider {
        height: 2px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        margin: 15px 0;
    }

    .summary-total {
        display: flex;
        justify-content: space-between;
        font-size: 1.3rem;
        font-weight: 700;
        color: #2c3e50;
        padding: 15px 0;
    }

    .btn-checkout {
        width: 100%;
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
        color: white;
        border: none;
        padding: 15px;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 10px;
    }

    .btn-checkout:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(39, 174, 96, 0.3);
    }

    .btn-continue-shopping {
        display: block;
        width: 100%;
        text-align: center;
        padding: 12px;
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        border: 2px solid #667eea;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .btn-continue-shopping:hover {
        background: #667eea;
        color: white;
    }

    .secure-notice {
        text-align: center;
        margin-top: 15px;
        color: #27ae60;
        font-weight: 600;
    }

    .promo-section {
        background: white;
        border-radius: 16px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .promo-section h6 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    /* Empty Cart */
    .empty-cart {
        text-align: center;
        padding: 80px 20px;
    }

    .empty-cart-icon {
        font-size: 5rem;
        color: #e0e0e0;
        margin-bottom: 20px;
    }

    .empty-cart h3 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

   
        
        .cart-item-actions {
            flex-direction: row;
            justify-content: space-between;
        }
    }
</style>

<script>
    function updateQuantity(cartId, newQty) {
        if (newQty < 1) return;
        
        fetch(`/Cart/UpdateQuantity/${cartId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(newQty)
        })
        .then(() => location.reload())
        .catch(err => console.error(err));
    }
</script>