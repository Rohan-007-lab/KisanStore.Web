@{
    ViewData["Title"] = "About Us";
}

<div class="about-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold text-white mb-4 animate-slide-in">
                    About <span class="text-gradient">KisanStore</span>
                </h1>
                <p class="lead text-white mb-4">
                    Your trusted partner in modern agriculture solutions
                </p>
            </div>
            <div class="col-lg-6">
                <img src="https://cdn-icons-png.flaticon.com/512/2917/2917995.png" 
                     alt="About" class="img-fluid animate-float">
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <!-- Mission & Vision -->
    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="info-card mission-card">
                <div class="info-icon">
                    <i class="fas fa-bullseye"></i>
                </div>
                <h3>Our Mission</h3>
                <p>To empower farmers with quality agricultural products and innovative solutions that enhance crop yield and sustainability.</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="info-card vision-card">
                <div class="info-icon">
                    <i class="fas fa-eye"></i>
                </div>
                <h3>Our Vision</h3>
                <p>To become India's most trusted platform for agricultural medicines and farming solutions, making quality products accessible to every farmer.</p>
            </div>
        </div>
    </div>

    <!-- Story Section -->
    <div class="story-section">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="story-image">
                    <img src="https://images.unsplash.com/photo-1625246333195-78d9c38ad449?w=600" 
                         alt="Our Story" class="img-fluid rounded shadow-lg">
                </div>
            </div>
            <div class="col-lg-6">
                <span class="section-badge">Our Story</span>
                <h2 class="display-5 fw-bold mb-4">Building Trust Since 2015</h2>
                <p class="text-muted mb-4">
                    KisanStore was founded with a simple mission: to provide farmers with easy access to genuine agricultural products at fair prices. What started as a small venture has grown into a comprehensive platform serving thousands of farmers across India.
                </p>
                <p class="text-muted mb-4">
                    We understand the challenges faced by modern farmers and are committed to providing solutions that combine traditional farming wisdom with modern agricultural science.
                </p>
                <div class="stats-row">
                    <div class="stat-item">
                        <h3>10,000+</h3>
                        <p>Happy Farmers</p>
                    </div>
                    <div class="stat-item">
                        <h3>500+</h3>
                        <p>Products</p>
                    </div>
                    <div class="stat-item">
                        <h3>15+</h3>
                        <p>States Covered</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Values Section -->
    <div class="values-section">
        <div class="text-center mb-5">
            <span class="section-badge">Our Values</span>
            <h2 class="display-5 fw-bold">What We Stand For</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="value-card">
                    <div class="value-icon">
                        <i class="fas fa-certificate"></i>
                    </div>
                    <h4>Quality Assurance</h4>
                    <p>We source only genuine products from certified manufacturers to ensure the best results for your crops.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-card">
                    <div class="value-icon">
                        <i class="fas fa-hand-holding-heart"></i>
                    </div>
                    <h4>Farmer First</h4>
                    <p>Every decision we make prioritizes the needs and welfare of our farming community.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-card">
                    <div class="value-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h4>Sustainability</h4>
                    <p>We promote eco-friendly farming practices and sustainable agricultural solutions.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="team-section">
        <div class="text-center mb-5">
            <span class="section-badge">Our Team</span>
            <h2 class="display-5 fw-bold">Meet The Experts</h2>
            <p class="text-muted">Dedicated professionals working for your success</p>
        </div>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="team-card">
                    <div class="team-image">
                        <img src="https://ui-avatars.com/api/?name=Rajesh+Sharma&size=200&background=667eea&color=fff" 
                             alt="Team Member">
                    </div>
                    <h5>Rajesh Sharma</h5>
                    <p class="text-muted">Founder & CEO</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="team-card">
                    <div class="team-image">
                        <img src="https://ui-avatars.com/api/?name=Priya+Patel&size=200&background=27ae60&color=fff" 
                             alt="Team Member">
                    </div>
                    <h5>Priya Patel</h5>
                    <p class="text-muted">Agricultural Expert</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="team-card">
                    <div class="team-image">
                        <img src="https://ui-avatars.com/api/?name=Amit+Kumar&size=200&background=e74c3c&color=fff" 
                             alt="Team Member">
                    </div>
                    <h5>Amit Kumar</h5>
                    <p class="text-muted">Operations Head</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="team-card">
                    <div class="team-image">
                        <img src="https://ui-avatars.com/api/?name=Sneha+Reddy&size=200&background=f39c12&color=fff" 
                             alt="Team Member">
                    </div>
                    <h5>Sneha Reddy</h5>
                    <p class="text-muted">Customer Support</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="cta-section">
        <div class="text-center">
            <h2 class="display-5 fw-bold text-white mb-3">Ready to Start?</h2>
            <p class="lead text-white mb-4">Join thousands of farmers who trust KisanStore</p>
            <a href="/Products" class="btn btn-light btn-lg">
                <i class="fas fa-shopping-bag"></i> Browse Products
            </a>
        </div>
    </div>
</div>

<style>
    .about-hero {
        background: linear-gradient(135deg, #2e7d32 0%, #558b2f 100%);
        padding: 100px 0;
        overflow: hidden;
    }

    .text-gradient {
        background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .animate-slide-in {
        animation: slideIn 0.8s ease-out;
    }

    .animate-float {
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes slideIn {
        from { opacity: 0; transform: translateX(-50px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    .section-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .info-card {
        background: white;
        padding: 40px;
        border-radius: 20px;
        height: 100%;
        box-shadow: 0 5px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

    .info-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

    .info-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        margin-bottom: 20px;
    }

    .mission-card .info-icon {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .vision-card .info-icon {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
    }

    .info-card h3 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .info-card p {
        color: #7f8c8d;
        line-height: 1.8;
    }

    .story-section {
        margin: 80px 0;
    }

    .stats-row {
        display: flex;
        gap: 30px;
        margin-top: 30px;
    }

    .stat-item h3 {
        font-size: 2.5rem;
        font-weight: 800;
        color: #2e7d32;
        margin-bottom: 5px;
    }

    .stat-item p {
        color: #7f8c8d;
        font-weight: 600;
    }

    .values-section {
        margin: 80px 0;
    }

    .value-card {
        background: white;
        padding: 40px 30px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
    }

    .value-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .value-icon {
        width: 70px;
        height: 70px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, #2e7d32 0%, #558b2f 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
    }

    .value-card h4 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .value-card p {
        color: #7f8c8d;
        line-height: 1.8;
    }

    .team-section {
        margin: 80px 0;
    }

    .team-card {
        background: white;
        padding: 30px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

    .team-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .team-image {
        width: 120px;
        height: 120px;
        margin: 0 auto 20px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid #f5f7fa;
    }

    .team-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-card h5 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .social-links {
        margin-top: 15px;
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .social-links a {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: #f5f7fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #667eea;
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        background: #667eea;
        color: white;
    }

    .cta-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 80px 40px;
        border-radius: 20px;
        margin: 80px 0;
    }
</style>