@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="page-hero">
    <div class="container">
        <h1 class="display-5 fw-bold text-white mb-2">
            <i class="fas fa-shield-alt"></i> Privacy Policy
        </h1>
        <p class="lead text-white-50">Your privacy is important to us</p>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-3">
            <div class="sticky-nav">
                <h6 class="fw-bold mb-3">Quick Navigation</h6>
                <nav class="nav flex-column">
                    <a class="nav-link" href="#introduction">Introduction</a>
                    <a class="nav-link" href="#info-collection">Information Collection</a>
                    <a class="nav-link" href="#info-usage">How We Use Information</a>
                    <a class="nav-link" href="#data-security">Data Security</a>
                    <a class="nav-link" href="#cookies">Cookies</a>
                    <a class="nav-link" href="#third-party">Third Party</a>
                    <a class="nav-link" href="#rights">Your Rights</a>
                    <a class="nav-link" href="#contact">Contact Us</a>
                </nav>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="content-section">
                <section id="introduction" class="mb-5">
                    <h3 class="section-title">Introduction</h3>
                    <p class="text-muted">
                        At KisanStore, we are committed to protecting your privacy and ensuring the security 
                        of your personal information. This Privacy Policy explains how we collect, use, 
                        disclose, and safeguard your information when you visit our website or use our services.
                    </p>
                    <div class="info-box">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <strong>Last Updated:</strong> November 28, 2024
                        </div>
                    </div>
                </section>

                <section id="info-collection" class="mb-5">
                    <h3 class="section-title">Information We Collect</h3>
                    <p class="text-muted">We collect several types of information from and about users:</p>
                    
                    <div class="feature-grid">
                        <div class="feature-box">
                            <i class="fas fa-user-circle"></i>
                            <h5>Personal Information</h5>
                            <p>Name, email address, phone number, and shipping address</p>
                        </div>
                        <div class="feature-box">
                            <i class="fas fa-credit-card"></i>
                            <h5>Payment Information</h5>
                            <p>Credit card details and billing information (securely processed)</p>
                        </div>
                        <div class="feature-box">
                            <i class="fas fa-chart-line"></i>
                            <h5>Usage Data</h5>
                            <p>Browser type, device information, and browsing patterns</p>
                        </div>
                        <div class="feature-box">
                            <i class="fas fa-map-marker-alt"></i>
                            <h5>Location Data</h5>
                            <p>IP address and general geographic location</p>
                        </div>
                    </div>
                </section>

                <section id="info-usage" class="mb-5">
                    <h3 class="section-title">How We Use Your Information</h3>
                    <ul class="styled-list">
                        <li>To process and fulfill your orders</li>
                        <li>To send you order confirmations and shipping updates</li>
                        <li>To respond to your inquiries and provide customer support</li>
                        <li>To improve our website and services</li>
                        <li>To send promotional emails (with your consent)</li>
                        <li>To detect and prevent fraud</li>
                    </ul>
                </section>

                <section id="data-security" class="mb-5">
                    <h3 class="section-title">Data Security</h3>
                    <p class="text-muted">
                        We implement appropriate technical and organizational measures to protect your 
                        personal information against unauthorized access, alteration, disclosure, or destruction.
                    </p>
                    <div class="alert alert-success">
                        <i class="fas fa-lock me-2"></i>
                        <strong>SSL Encryption:</strong> All data transmission is encrypted using 256-bit SSL technology
                    </div>
                </section>

                <section id="cookies" class="mb-5">
                    <h3 class="section-title">Cookies Policy</h3>
                    <p class="text-muted">
                        We use cookies to enhance your browsing experience, analyze site traffic, and 
                        personalize content. You can control cookie settings through your browser preferences.
                    </p>
                </section>

                <section id="third-party" class="mb-5">
                    <h3 class="section-title">Third-Party Services</h3>
                    <p class="text-muted">
                        We may share your information with trusted third-party service providers who assist us in:
                    </p>
                    <ul class="styled-list">
                        <li>Payment processing (Razorpay, Paytm, etc.)</li>
                        <li>Shipping and delivery services</li>
                        <li>Email marketing platforms</li>
                        <li>Analytics services (Google Analytics)</li>
                    </ul>
                </section>

                <section id="rights" class="mb-5">
                    <h3 class="section-title">Your Rights</h3>
                    <div class="rights-grid">
                        <div class="right-item">
                            <i class="fas fa-eye"></i>
                            <span>Access your data</span>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-edit"></i>
                            <span>Correct inaccuracies</span>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-trash"></i>
                            <span>Request deletion</span>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-ban"></i>
                            <span>Opt-out of marketing</span>
                        </div>
                    </div>
                </section>

                <section id="contact" class="mb-5">
                    <h3 class="section-title">Contact Us</h3>
                    <p class="text-muted">
                        If you have any questions about this Privacy Policy, please contact us:
                    </p>
                    <div class="contact-info-grid">
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <strong>Email:</strong>
                                <a href="mailto:privacy@kisanstore.com">privacy@kisanstore.com</a>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <div>
                                <strong>Phone:</strong>
                                <a href="tel:+919876543210">+91 98765 43210</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

<style>
    .page-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 80px 0;
    }

    .sticky-nav {
        position: sticky;
        top: 100px;
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .sticky-nav .nav-link {
        color: #7f8c8d;
        padding: 10px 15px;
        border-left: 3px solid transparent;
        transition: all 0.3s ease;
    }

    .sticky-nav .nav-link:hover {
        color: #667eea;
        background: #f8f9fa;
        border-left-color: #667eea;
    }

    .content-section {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .section-title {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 3px solid #667eea;
        display: inline-block;
    }

    .info-box {
        display: flex;
        align-items: center;
        gap: 15px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px;
        border-radius: 12px;
        margin-top: 20px;
    }

    .info-box i {
        font-size: 2rem;
        color: #667eea;
    }

    .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .feature-box {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 25px;
        border-radius: 12px;
        text-align: center;
        transition: all 0.3s ease;
    }

    .feature-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .feature-box i {
        font-size: 2.5rem;
        color: #667eea;
        margin-bottom: 15px;
    }

    .feature-box h5 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .feature-box p {
        color: #7f8c8d;
        margin: 0;
        font-size: 0.9rem;
    }

    .styled-list {
        list-style: none;
        padding: 0;
    }

    .styled-list li {
        padding: 12px 0 12px 35px;
        position: relative;
        color: #7f8c8d;
    }

    .styled-list li::before {
        content: '\f00c';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        position: absolute;
        left: 0;
        color: #27ae60;
    }

    .rights-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 20px;
    }

    .right-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .right-item:hover {
        border-color: #667eea;
        background: #f8f9fa;
    }

    .right-item i {
        font-size: 1.5rem;
        color: #667eea;
    }

    .contact-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 12px;
    }

    .contact-item i {
        font-size: 1.8rem;
        color: #667eea;
    }

    .contact-item a {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
    }

    .contact-item a:hover {
        text-decoration: underline;
    }
</style>