@model List<KisanStore.Web.Models.Product>
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container">
        <h1 class="display-4"><i class="fas fa-seedling"></i> Welcome to KisanStore</h1>
        <p class="lead">Premium Agriculture Medicines & Solutions for Your Farm</p>
        <a href="/Products" class="btn btn-light btn-lg mt-3">
            <i class="fas fa-shopping-bag"></i> Shop Now
        </a>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div class="card product-card h-100">
                        <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" class="card-img-top" alt="@product.ProductName">
                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text text-muted small">@product.Manufacturer</p>
                            <div class="mb-2">
                                @if (product.DiscountPrice.HasValue)
                                {
                                    <span class="price">₹@product.DiscountPrice</span>
                                    <span class="old-price ms-2">₹@product.Price</span>
                                }
                                else
                                {
                                    <span class="price">₹@product.Price</span>
                                }
                                <span class="text-muted">/@product.Unit</span>
                            </div>
                            @if (product.StockQuantity > 0)
                            {
                                <span class="badge bg-success">In Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/Products/Details/@product.ProductId" class="btn btn-primary btn-sm w-100">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No featured products available.
                </div>
            </div>
        }
    </div>
</div>

<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-3">
            <div class="card border-0">
                <div class="card-body">
                    <i class="fas fa-truck fa-3x text-primary mb-3"></i>
                    <h5>Free Delivery</h5>
                    <p class="text-muted">On orders above ₹500</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0">
                <div class="card-body">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h5>Genuine Products</h5>
                    <p class="text-muted">100% Authentic</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0">
                <div class="card-body">
                    <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                    <h5>24/7 Support</h5>
                    <p class="text-muted">Expert assistance</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0">
                <div class="card-body">
                    <i class="fas fa-undo fa-3x text-primary mb-3"></i>
                    <h5>Easy Returns</h5>
                    <p class="text-muted">7-day return policy</p>
                </div>
            </div>
        </div>
    </div>
</div>