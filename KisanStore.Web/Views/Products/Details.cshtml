@model KisanStore.Web.Models.Product
@{
    ViewData["Title"] = Model.ProductName;
}

<div class="container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Products">Products</a></li>
            <li class="breadcrumb-item active">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row g-5">
        <!-- Product Image -->
        <div class="col-lg-5">
            <div class="product-detail-image">
                <img src="@(Model.ImageUrl ?? "https://via.placeholder.com/500")" 
                     alt="@Model.ProductName" class="img-fluid rounded shadow-lg">
                @if (Model.DiscountPrice.HasValue)
                {
                    var discount = Math.Round((decimal)(Model.Price - Model.DiscountPrice) / Model.Price * 100);
                    <div class="detail-discount-badge">
                        <span>@discount%</span>
                        <small>OFF</small>
                    </div>
                }
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-7">
            <div class="product-detail-info">
                <!-- Category Badge -->
                <span class="category-badge">
                    <i class="fas fa-tag"></i> @Model.Category?.CategoryName
                </span>

                <!-- Product Title -->
                <h1 class="product-detail-title">@Model.ProductName</h1>

                <!-- Manufacturer -->
                <p class="manufacturer-info">
                    <i class="fas fa-industry"></i> By <strong>@Model.Manufacturer</strong>
                </p>

                <!-- Rating -->
                <div class="rating-section mb-3">
                    <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                    <span class="rating-text">4.5 (128 reviews)</span>
                </div>

                <!-- Price -->
                <div class="price-section">
                    @if (Model.DiscountPrice.HasValue)
                    {
                        <div class="d-flex align-items-center gap-3">
                            <span class="current-price">₹@Model.DiscountPrice</span>
                            <span class="original-price">₹@Model.Price</span>
                            <span class="save-badge">
                                Save ₹@(Model.Price - Model.DiscountPrice)
                            </span>
                        </div>
                    }
                    else
                    {
                        <span class="current-price">₹@Model.Price</span>
                    }
                    <p class="price-unit">per @Model.Unit</p>
                </div>

                <!-- Stock Status -->
                <div class="stock-section">
                    @if (Model.StockQuantity > 10)
                    {
                        <div class="stock-badge in-stock">
                            <i class="fas fa-check-circle"></i>
                            <span>In Stock (@Model.StockQuantity available)</span>
                        </div>
                    }
                    else if (Model.StockQuantity > 0)
                    {
                        <div class="stock-badge low-stock">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span>Low Stock (@Model.StockQuantity left)</span>
                        </div>
                    }
                    else
                    {
                        <div class="stock-badge out-stock">
                            <i class="fas fa-times-circle"></i>
                            <span>Out of Stock</span>
                        </div>
                    }
                </div>

                <!-- Quantity Selector -->
                @if (Model.StockQuantity > 0)
                {
                    <div class="quantity-section">
                        <label class="form-label fw-bold">Quantity:</label>
                        <div class="quantity-selector">
                            <button class="qty-btn" onclick="changeQty(-1)">
                                <i class="fas fa-minus"></i>
                            </button>
                            <input type="number" id="quantity" value="1" min="1" 
                                   max="@Model.StockQuantity" readonly>
                            <button class="qty-btn" onclick="changeQty(1)">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Add to Cart Button -->
                    <div class="action-buttons">
                        <button onclick="addToCart(@Model.ProductId)" class="btn-primary-custom">
                            <i class="fas fa-shopping-cart"></i> Add to Cart
                        </button>
                        <button class="btn-wishlist">
                            <i class="far fa-heart"></i>
                        </button>
                    </div>
                }

                <!-- Features -->
                <div class="features-section">
                    <div class="feature-item">
                        <i class="fas fa-truck text-primary"></i>
                        <div>
                            <strong>Free Delivery</strong>
                            <small>On orders above ₹500</small>
                        </div>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-shield-alt text-success"></i>
                        <div>
                            <strong>100% Genuine</strong>
                            <small>Authentic products</small>
                        </div>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-undo text-warning"></i>
                        <div>
                            <strong>Easy Returns</strong>
                            <small>7-day return policy</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Description Tab -->
    <div class="product-tabs mt-5">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#description">
                    Description
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#specifications">
                    Specifications
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#reviews">
                    Reviews (128)
                </button>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="description">
                <div class="p-4">
                    <h5>Product Description</h5>
                    <p class="text-muted">@(Model.Description ?? "No description available for this product.")</p>
                </div>
            </div>
            <div class="tab-pane fade" id="specifications">
                <div class="p-4">
                    <table class="table">
                        <tr>
                            <th>Manufacturer</th>
                            <td>@Model.Manufacturer</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>@Model.Category?.CategoryName</td>
                        </tr>
                        <tr>
                            <th>Unit</th>
                            <td>@Model.Unit</td>
                        </tr>
                        <tr>
                            <th>Stock</th>
                            <td>@Model.StockQuantity units</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="reviews">
                <div class="p-4">
                    <p class="text-muted">Reviews feature coming soon!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-detail-image {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
    }

    .product-detail-image img {
        width: 100%;
        transition: transform 0.5s ease;
    }

    .product-detail-image:hover img {
        transform: scale(1.05);
    }

    .detail-discount-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        padding: 15px 20px;
        border-radius: 50%;
        text-align: center;
        box-shadow: 0 5px 20px rgba(231, 76, 60, 0.4);
    }

    .detail-discount-badge span {
        font-size: 1.5rem;
        font-weight: 800;
        display: block;
    }

    .detail-discount-badge small {
        font-size: 0.75rem;
        display: block;
    }

    .product-detail-info {
        padding: 20px 0;
    }

    .category-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .product-detail-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 15px;
        line-height: 1.2;
    }

    .manufacturer-info {
        color: #7f8c8d;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .rating-section {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .stars {
        color: #f39c12;
        font-size: 1.2rem;
    }

    .rating-text {
        color: #7f8c8d;
        font-weight: 600;
    }

    .price-section {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 25px;
        border-radius: 15px;
        margin: 25px 0;
    }

    .current-price {
        font-size: 3rem;
        font-weight: 900;
        color: #27ae60;
        line-height: 1;
    }

    .original-price {
        font-size: 1.5rem;
        color: #95a5a6;
        text-decoration: line-through;
    }

    .save-badge {
        background: #e74c3c;
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .price-unit {
        color: #7f8c8d;
        margin-top: 10px;
        margin-bottom: 0;
    }

    .stock-section {
        margin: 25px 0;
    }

    .stock-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1.05rem;
    }

    .stock-badge.in-stock {
        background: #d5f4e6;
        color: #27ae60;
    }

    .stock-badge.low-stock {
        background: #fff3cd;
        color: #f39c12;
    }

    .stock-badge.out-stock {
        background: #f8d7da;
        color: #e74c3c;
    }

    .quantity-section {
        margin: 25px 0;
    }

    .quantity-selector {
        display: inline-flex;
        align-items: center;
        gap: 0;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        overflow: hidden;
    }

    .qty-btn {
        width: 45px;
        height: 45px;
        border: none;
        background: white;
        color: #667eea;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .qty-btn:hover {
        background: #667eea;
        color: white;
    }

    .quantity-selector input {
        width: 70px;
        height: 45px;
        border: none;
        text-align: center;
        font-weight: 700;
        font-size: 1.2rem;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin: 30px 0;
    }

    .btn-primary-custom {
        flex: 1;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 18px 40px;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .btn-wishlist {
        width: 60px;
        height: 60px;
        border: 2px solid #e0e0e0;
        background: white;
        border-radius: 12px;
        font-size: 1.5rem;
        color: #e74c3c;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-wishlist:hover {
        background: #e74c3c;
        color: white;
        border-color: #e74c3c;
    }

    .features-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin: 30px 0;
        padding: 25px;
        background: #f8f9fa;
        border-radius: 15px;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .feature-item i {
        font-size: 2rem;
    }

    .feature-item strong {
        display: block;
        color: #2c3e50;
        font-size: 0.95rem;
    }

    .feature-item small {
        display: block;
        color: #7f8c8d;
        font-size: 0.8rem;
    }

    .product-tabs .nav-tabs {
        border-bottom: 2px solid #e0e0e0;
    }

    .product-tabs .nav-link {
        color: #7f8c8d;
        font-weight: 600;
        padding: 15px 30px;
        border: none;
        transition: all 0.3s ease;
    }

    .product-tabs .nav-link.active {
        color: #667eea;
        border-bottom: 3px solid #667eea;
    }

    .tab-content {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }
</style>

<script>
    function changeQty(delta) {
        const input = document.getElementById('quantity');
        const newVal = parseInt(input.value) + delta;
        const max = parseInt(input.max);
        
        if (newVal >= 1 && newVal <= max) {
            input.value = newVal;
        }
    }

    function addToCart(productId) {
        const quantity = document.getElementById('quantity').value;
        
        fetch('/Cart/AddToCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `productId=${productId}&quantity=${quantity}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Product added to cart!');
                window.location.href = '/Cart';
            } else {
                alert(data.message);
                if (data.message.includes('login')) {
                    window.location.href = '/Account/Login';
                }
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to add product to cart');
        });
    }
</script>